#! /usr/bin/env bash

set -e

LUA="$(which luajit2)"
if [ -z "${LUA}" ]; then
  LUA="$(which luajit)"

  if [ -z "${LUA}" ]; then
    LUA="$(which lua)"

    if [ -z "${LUA}" ]; then
      echo "Error: luajit2, luajit and lua executables not found" >&2
      exit 1
    fi
  fi
fi

/usr/bin/env ${LUA} "$@"
