server {
  listen #{STATIC_NAME}-static#{DEPLOY_SERVER_DOMAIN}:80;
  server_name #{STATIC_NAME}-static#{DEPLOY_SERVER_DOMAIN};

  access_log  /var/log/nginx/#{PROJECT_NAME}-#{STATIC_NAME}-static.access.log;
  set_real_ip_from 0.0.0.0/0;
  real_ip_header X-Real-IP;

  location / {
    alias /usr/local/lib/luarocks/rocks/#{PROJECT_NAME}.www.static.#{STATIC_NAME}/scm-1/www/static/#{STATIC_NAME}/site/;
  }
}
