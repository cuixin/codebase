#{API_NAME} =
{
  prefix = "#{PROJECT_NAME}.#{API_NAME}";
  actions =
  {
    ["reopen_log_file"] = true;
    ["shutdown"] = true;
  };
  zmq =
  {
    protocol = "ipc://";
    path = "/var/run/#{PROJECT_NAME}/#{API_NAME}/control/${NODE_ID}";
    mask = ".*%.ipc$";
  };
}

#{SERVICE_NAME_UNDERLINE} =
{
  prefix = "#{PROJECT_NAME}:#{SERVICE_NAME}:";
  actions =
  {
    ["reopen_log_file"] = true;
    ["shutdown"] = true;
  };
  nodes =
  {
    [1] =
    {
      url = false;
    };
  };
}
